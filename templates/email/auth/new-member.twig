{% extends 'email/email.twig' %}

{% block content %}
  <p class="lead">A new member, {{ user.name }} just joined.</p>
  <hr>
  <table>
    <tr>
      <th>User ID</th>
      <td>{{ user.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ user.name }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ user.email }}</td>
    </tr>
  </table>
{% endblock %}
