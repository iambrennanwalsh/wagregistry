{% apply inky_to_html|inline_css(source('@styles/foundation-emails.css'), source('@styles/email.css')) %}
  <wrapper class="header" bgcolor="#222222">
    <container>
      <row class="collapse">
        <columns small="12" valign="middle">
          <a href="{{ url('frontend.home') }}">
          <img src="{{ email.image('@images/logo.png') }}" alt="Logo">
          </a>
        </columns>
      </row>
    </container>
  </wrapper>
  <container>
    <spacer size="16"></spacer>
    <row>
      <columns>
        <h1>{% block title %}{{email.subject}}{% endblock %}</h1>
        {% block content %} {% endblock %}
      </columns>
    </row>
    <wrapper class="secondary">
      <spacer size="16"></spacer>
      <row>
        <columns>
          <p>© {{ "now"|date("Y") }} • {{ name }}!</p>
        </columns>
      </row>
    </wrapper>
  </container>
{% endapply %}

